# Application
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=quantumtrust

# JWT
JWT_SECRET=your-secret-key
JWT_EXPIRATION=1d

# MongoDB
MONGODB_URI=mongodb://localhost:27017/quantumtrust

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Blockchain
FABRIC_NETWORK_PATH=../blockchain/network
FABRIC_CHANNEL_NAME=quantumtrust
FABRIC_CHAINCODE_NAME=keymanagement

# Encryption
MASTER_KEY=your-master-key
HSM_ENABLED=false
HSM_CONFIG_PATH=/path/to/hsm/config

# Email
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=user@example.com
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@quantumtrust.com

# Storage
DEFAULT_STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=quantumtrust-data

# Logging
LOG_LEVEL=info
